<!DOCTYPE html>
<html>
  <head>
    <title>Catalogo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <main class="container">
  <% if notice %>
    <p class = "alert alert-success"><%= notice %> </p>
  <% end %> 

  <% if alert %>
    <p class = "alert alert-danger"><%= alert %> </p>
  <% end %> 

  <p class ="navbar-text pull-right">
    <% if user_signed_in? %>
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link badge badge-pill badge-info' %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link badge badge-pill badge-info' %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path, :class => 'navbar-link badge badge-pill badge-info' %>
      <%= link_to 'Login', new_user_session_path, method: :delete, :class => 'navbar-link badge badge-pill badge-info' %>
    <% end %>
  </p>
  <dic class="row">
  <div class="col-sm-2">
  <div> <%= link_to 'Categorias', '/categories' %> </div>
  <div> <%= link_to 'Productos', '/productos' %> </div>
  </div>
  <div class="col-sm-10"> <%= yield %> </div>
  </div>
    </main>
  </body>
</html>
